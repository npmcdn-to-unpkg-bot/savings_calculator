$(document).ready(function(){
    $("#entry_provider").change(function(){
        if($("#entry_provider").val()){
          $("#fuel-unit").html('fast');   
        }            
    });        
});

$(document).ready(function(){
    $("#fuel-unit").change(function(){
       fuel_type = $("#fuel-type").val();
      
       if (fuel_type == "Propane") {
       	$("#fuel-unit").html("fast"); 
       }              
    });        
});